<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>View a report</title>
  <%- include('../partials/head.ejs') %>

</head>
<body>
  <header>
    <%- include('../partials/header.ejs') %>
  </header>

  <main>
    <!--  <h1>Left as an exercise</h1>  -->
    <h2>
      <ul>
        <li id="listitem">Id : <%= data.id %> </li>
        <li>Name : <%= data.name %></li>
        <li>Age : <%= data.age %> </li>
        <li>Gender : <%= data.gender %></li>
        <li>State : <%= data.state %> </li>
        <li>District : <%= data.district %></li>
        <li>City: <%= data.city %></li>
      </ul>
      <button id="but" onclick="deleteMe()">Delete </button>
      <button onclick="location.href='http://localhost:3100/reports/edit/'+<%= data.id %>" type="button">
         Edit</button>
    <script>
      function deleteMe(){
          document.getElementById("listitem").innerHTML = "Welcome";
          var p=<%=data.id %>;
          //console.log(p);
          fetch("http://localhost:3100/reports/"+p,{
            method:"delete"
          }).then(res=>res.json())
          .then(res2=>{
            console.log(res2)
            location.reload()
          });
      }

    </script>
    </h2>
  </main>
  
</body>
</html>